{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es6",
      "esnext",
      "es2015",
      "esnext.asynciterable"
    ],
    "skipLibCheck": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "baseUrl": ".",
    "paths": {
      "@apis/*": [
        "src/apis/*"
      ],
      "@database/*": [
        "src/database/*"
      ],
      "@enums/*": [
        "src/enums/*"
      ],
      "@general/*": [
        "src/general/*"
      ],
      "@middlewares/*": [
        "src/middlewares/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@src/*": [
        "src/*"
      ],
      "@tests/*": [
        "tests/*"
      ],
      "@validators/*": [
        "src/validators/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "@types/node",
      "@types/jest",
      "reflect-metadata",
      "jest"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./*.js",
    "./src",
    "./tests",
    "./modules.d.ts",
    "./*.ts"
  ],
  "exclude": [
    "./dist",
    "./.vscode",
    "node_modules"
  ]
}